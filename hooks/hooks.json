{
  "hooks": {
    "pre-commit": {
      "description": "Runs before committing changes",
      "enabled": true,
      "actions": [
        {
          "type": "lint",
          "description": "Run linting checks"
        },
        {
          "type": "format",
          "description": "Format code according to project standards"
        }
      ]
    },
    "post-commit": {
      "description": "Runs after committing changes",
      "enabled": true,
      "actions": [
        {
          "type": "notify",
          "description": "Log successful commit"
        }
      ]
    },
    "pre-push": {
      "description": "Runs before pushing to remote",
      "enabled": true,
      "actions": [
        {
          "type": "test",
          "description": "Run test suite"
        }
      ]
    },
    "on-error": {
      "description": "Runs when an error occurs",
      "enabled": true,
      "actions": [
        {
          "type": "log",
          "description": "Log error details for debugging"
        }
      ]
    }
  }
}
